<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccentGreen</item>
        <item name="android:statusBarColor">?android:attr/colorPrimary</item>
        <item name="android:navigationBarColor">?attr/colorPrimaryDark</item>
        <item name="android:windowBackground">?attr/colorPrimary</item>
        <item name="android:colorBackground">?attr/colorPrimary</item>
        <item name="android:fontFamily">@font/TitilliumWeb-Regular</item>
    </style>

    <style name="ToolbarTheme" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:fontFamily">@font/TitilliumWeb-Regular</item>
        <item name="android:textColor">@color/colorAccentGreen</item>
        <item name="android:background">@color/colorPrimaryDark</item>
    </style>

    <style name="TextAppearance.AppCompat.Widget.ActionBarTitle" parent="@android:style/TextAppearance">
        <item name="android:fontFamily">@font/TitilliumWeb-Regular</item>
        <item name="android:textColor">@color/colorAccentGreen</item>
        <item name="android:textSize">30dp</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
